# Consul Agent (Upstart unit)
description "Consul Agent"
start on (local-filesystems and net-device-up IFACE!=lo)
stop on runlevel [06]

exec sudo -u {{ consul_user }} -g {{ consul_group }} {{ consul_home }}/bin/consul agent -server -bootstrap-expect 1 -data-dir {{ consul_data_dir }}  -bind={{ consul_bind_addr }} >> {{ consul_log_file }} 2>&1
respawn
respawn limit 10 10
kill timeout 10
